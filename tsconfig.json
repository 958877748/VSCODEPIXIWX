{
    "include": [
        "ts/**/*.ts",
    ],
    "compilerOptions": {
        
        //合并输出到单个文件
        "outFile": "js/bundle.js",

        //指定 ECMAScript 目标版本
        "target": "es2016",

        //生成相应的声明文件 .d.ts, 作用:写代码时有提示
        "declaration": true,

        //生成相应的文件 .map, 作用:调试打断点指向ts文件
        "sourceMap": true,

        //显示诊断信息?
        "diagnostics": true,

        //在输出文件的开始处发出 UTF-8 字节顺序标记 (BOM)
        "emitBOM" :false,

        //报告未使用的局部变量的错误。
        "noUnusedLocals" :true,
    }
}
